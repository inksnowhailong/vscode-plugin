{
  "name": "packagerun",
  "displayName": "packagerun",
  "description": "vscode扩展，读取package.json并在左侧目录的package.json右键里面生成scripts的配置内容，快速运行npm run",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "packagerun.commands",
        "title": "packagerun:右键package.json"
      },
      {
        "command": "packagerun.key",
        "title": "packagerun:快捷键shift+r"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "group": "z_commands",
          "when": "resourceFilename == package.json",
          "command": "packagerun.commands"
        }
      ]
    },
    "keybindings": [
      {
        "command": "packagerun.key",
        "key": "shift+r",
        "mac": "shift+r",
        "when": "activeEditor != undefined"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.3",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "pkg-dir": "^7.0.0"
  }
}
